  "author": {
    "name": "MCP Config Generator Team",
    "email": "contact@example.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/mcp-config-generator.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/mcp-config-generator/issues"
  },
  "homepage": "https://github.com/your-username/mcp-config-generator#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
